<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"


    >
    <ImageView
        android:id="@+id/zipImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/l1"

        android:contentDescription="@string/app_name"
        tools:ignore="UnknownIdInLayout" />
   <!-- <com.startapp.android.publish.banner.Banner
        android:id="@+id/startAppBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"

        />-->

    <RelativeLayout
        android:id="@+id/patch_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/date_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="15dp"



        >
        <LinearLayout

            android:id="@+id/time_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"


            >
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="2dp"
                android:shadowColor="#000000"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="1"

                android:text="12:45"
                android:textColor="#ea4448"
                android:textSize="28sp"

                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/tv_ampm"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:text="PM"
                android:shadowColor="#000000"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:layout_marginLeft="5dp"
                android:textColor="#ea4448"
                android:textSize="20sp"

                tools:ignore="HardcodedText" />




        </LinearLayout>



    </RelativeLayout>

    <LinearLayout

        android:id="@+id/date_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/ribbonlayout"
        android:layout_marginBottom="5dp"

        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="21 May 15"
            android:textColor="#1789ea"
            android:textSize="22sp"

            tools:ignore="HardcodedText" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ribbonlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp">




        <TextView
            android:id="@+id/bettry"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="21%"
            android:layout_toRightOf="@+id/charger"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="#43aa4e"
            android:textSize="18sp"
            android:shadowColor="#000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/charger"
            android:layout_width="35dp"

            android:layout_height="25dp"
            android:background="@drawable/charger"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:visibility="visible"
            tools:ignore="UnknownIdInLayout" />
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
        
    
    
    
    
    
    
    
    
    